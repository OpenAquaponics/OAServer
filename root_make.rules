# reference to common paths
# ROOT_SRC_PATH needs to be set by the caller
ROOT_COMMON_PATH  = ${ROOT_SRC_PATH}/common
ROOT_INCL_PATH    = ${ROOT_SRC_PATH}/include
ROOT_LIB_PATH     = ${ROOT_SRC_PATH}/lib
ROOT_BIN_PATH     = ${ROOT_SRC_PATH}/bin

# use Standard C compiler by default
GCC = gcc
G++ = g++

.SUFFIXES : .o .c .a .cc .cpp


# compiler flags
COMMON_WARN_FLAGS = -Wcomment -Wformat -Wimplicit -Wmissing-braces \
-Wparentheses -Wreturn-type -Wswitch -Wunused -Wuninitialized -W -Wall \
-Wfloat-equal -Wundef -Wconversion  \
-Wsign-compare \
-Wunreachable-code -Wdisabled-optimization
#-Wswitch-default  causes problems with compilers on rack machines
STDC_COMP_WARN_FLAGS = ${COMMON_WARN_FLAGS} -Wsequence-point 
CPP_COMP_WARN_FLAGS= ${COMMON_WARN_FLAGS}
COMP_OPTIMIZE_FLAGS = -O
DEBUGGER_FLAGS = -ggdb
USER_DEF_SYMBOLS =
COMP_FLAGS = $(STDC_COMP_WARN_FLAGS) $(COMP_OPTIMIZE_FLAGS) $(DEBUGGER_FLAGS) \
	$(USER_DEF_SYMBOLS)
CPP_COMP_FLAGS = $(CPP_COMP_WARN_FLAGS) $(COMP_OPTIMIZE_FLAGS) \
	$(DEBUGGER_FLAGS) $(USER_DEF_SYMBOLS)



# library names
LIB_SERIAL   = -lserial
LIB_ETHERNET = -lethernet
LIB_DATABASE = -ldatabase -lsqlite3
LIB_UTIL     = -lutil
LIB_JSON     = -ljson_linux-gcc-4.7.2_libmt


